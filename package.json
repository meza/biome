{
  "name": "@meza/biome",
  "version": "0.0.0",
  "description": "A reusable Biome configuration",
  "main": "biome.json",
  "keywords": [
    "linting",
    "nodejs",
    "typescript",
    "javascript",
    "css",
    "formatting",
    "biome",
    "reusable-configuration"
  ],
  "author": "Meza",
  "private": false,
  "exports": {
    ".": "./biome.json"
  },
  "scripts": {
    "lint": "biome check --fix",
    "lint:ci": "biome ci --reporter=github ."
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@commitlint/config-conventional": "19.8.1",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/npm": "12.0.1",
    "@semantic-release/release-notes-generator": "14.0.3",
    "commitlint": "19.8.1",
    "lefthook": "1.11.14",
    "pnpm": "10.12.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
